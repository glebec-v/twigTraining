{% import 'tags.macro.twig' as output %}
<div class="span5">
    <h2>{{ element.name }} {{ element.type }}
        {% if element is recommended %}
            <span class="label label-important">Recommended</span>
        {% endif %}
    </h2>
    <h5>Tags: {{ output.get(element.tags) }}</h5>

    <img class="img-polaroid" src="{{ element.image }}" alt="{{ element.name }}" title="{{ element.name }}"/>
    <p>
        {{ element.description[:100] }}...
    </p>
    <p>Sales started at {{ element.dateProduction | date('Y') }}</p>
    <a class="btn btn-large btn-primary" href="/products/show/id/{{ element.id }}">View details</a>
    <div class="container" style="margin-top: 10px"></div>
    <div class="container">
            <span class="alert-success" style="font-size: x-large">{{ element.price|number_format(
                    decimal=0,
                    decimal_point='.',
                    thousand_sep=' '
                ) }} UEC</span>
            <span class="alert-info">{{ element.price|currencyExchange(rate.crey)|number_format(
                    decimal=2,
                    decimal_point='.',
                    thousand_sep=' '
                ) }} CREY</span>
            <span class="alert-info">{{ element.price|currencyExchange(rate.taernin)|number_format(
                decimal=2,
                decimal_point='.',
                thousand_sep=' '
                ) }} Taernin</span>
    </div>
    <div class="container" style="margin-top: 30px"></div>
</div>

